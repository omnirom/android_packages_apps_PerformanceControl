<resources>

    <!-- Whether or not the app is meant to be run as a system app,
         bypassing the need of busybox/su -->
    <bool name="config_isSystemApp">true</bool>

    <!-- Whether or not to only show performance-related options -->
    <bool name="config_showPerformanceOnly">true</bool>

    <!-- If true, menu_tabbed view is used, else it uses the menu_drawer mode -->
    <bool name="config_use_tabbed">false</bool>

    <!-- If false, user can't switch between menu_tabbed and menu_drawer mode -->
    <bool name="config_allow_toggle_tabbed">true</bool>


    <!-- Paths for KSM (Change this in device overlay if device uses different paths, such as in the case of UKSM -->
    <string name="ksm_run_path" translatable="false">/sys/kernel/mm/ksm/run</string>
    <string name="ksm_fullscans_path" translatable="false">/sys/kernel/mm/ksm/full_scans</string>
    <string name="ksm_pages_shared_path" translatable="false">/sys/kernel/mm/ksm/pages_shared</string>
    <string name="ksm_pages_sharing_path" translatable="false">/sys/kernel/mm/ksm/pages_sharing</string>
    <string name="ksm_pages_to_scan_path" translatable="false">/sys/kernel/mm/ksm/pages_to_scan</string>
    <string name="ksm_pages_unshared_path" translatable="false">/sys/kernel/mm/ksm/pages_unshared</string>
    <string name="ksm_pages_volatile_path" translatable="false">/sys/kernel/mm/ksm/pages_volatile</string>
    <string name="ksm_pages_sleep_path" translatable="false">/sys/kernel/mm/ksm/sleep_millisecs</string>
</resources>
